generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_CORE")
}

enum TokenType {
  ACCESS
  REFRESH
  RECOVERY
}

enum Provider {
  GOOGLE
  FACEBOOK
  GITHUB
  CREDENTIALS
}

model Session {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  type      TokenType
  provider  Provider
  expires   DateTime
  createdAt DateTime  @default(now()) @map("created_at")

  @@map("sessions")
}
