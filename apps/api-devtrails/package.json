{
  "name": "@devtrails/api-devtrails",
  "version": "0.0.1",
  "description": "API Users for DevTrails",
  "scripts": {
    "env:load": "dotenv -e ../../.env --",
    "dev": "pnpm env:load tsx watch src/server.ts",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio --port 5556",
    "db:seed": "pnpm env:load prisma db seed",
    "lint": "npx eslint --fix src/**/*.{ts,tsx}",
    "test": "vitest run --dir src --coverage",
    "test:watch": "vitest --dir src --watch --coverage",
    "test:create-prisma-environment": "cd prisma/vitest-environment-prisma && pnpm link --global",
    "test:install-prisma-environment": "pnpm link --global vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "dotenv -e ../../.env -- vitest run --dir src/application/controllers/__tests__",
    "test:e2e:watch": "dotenv -e ../../.env -- vitest --dir src/application/controllers/__tests__ --watch",
    "test:ui": "dotenv -e ../../.env -- vitest --ui --coverage",
    "test:cov": "dotenv -e ../../.env -- vitest --coverage"
  },
  "dependencies": {
    "@devtrails/auth": "workspace:*",
    "@faker-js/faker": "^9.3.0",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.2",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@prisma/client": "6.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.5.1",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "fastify": "^5.2.0",
    "fastify-multer": "^2.0.3",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@devtrails/env": "workspace:*",
    "@devtrails/eslint-config": "workspace:*",
    "@devtrails/prettier": "workspace:*",
    "@devtrails/tsconfig": "workspace:*",
    "@types/crypto-js": "^4.2.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "^2.1.8",
    "supertest": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": "@devtrails/prettier"
}
