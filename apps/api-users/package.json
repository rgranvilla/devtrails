{
  "name": "@devtrails/api-users",
  "version": "0.0.1",
  "description": "API Users for DevTrails",
  "scripts": {
    "dev": "pnpm env:load tsx watch src/infra/http/server.ts",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio --port 5556",
    "db:seed": "pnpm env:load prisma db seed",
    "env:load": "dotenv -e ../../.env --",
    "lint": "npx eslint --fix src/**/*.{ts,tsx}",
    "test": "vitest run --dir src/use-cases",
    "test:watch": "vitest --dir src/use-cases",
    "test:create-prisma-environment": "cd prisma/vitest-environment-prisma && pnpm link",
    "test:install-prisma-environment": "pnpm link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir src/http",
    "test:e2e:watch": "vitest --dir src/http",
    "test:cov": "vitest --run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@devtrails/auth": "workspace:*",
    "@faker-js/faker": "^9.3.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.2",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@prisma/client": "6.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.5.1",
    "bcryptjs": "^2.4.3",
    "dotenv-cli": "^8.0.0",
    "fastify": "^5.2.0",
    "fastify-multer": "^2.0.3",
    "fastify-type-provider-zod": "^4.0.2",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@devtrails/env": "workspace:*",
    "@devtrails/eslint-config": "workspace:*",
    "@devtrails/prettier": "workspace:*",
    "@devtrails/tsconfig": "workspace:*",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^2.1.8",
    "supertest": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": "@devtrails/prettier"
}
